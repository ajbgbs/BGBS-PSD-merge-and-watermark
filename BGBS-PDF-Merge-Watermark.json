{
  "openapi": "3.0.0",
  "info": {
    "title": "PDF Processor API",
    "description": "API to merge PDFs and apply watermarks with support for Power Automate integration.",
    "version": "1.1.0"
  },
  "paths": {
    "/merge": {
      "post": {
        "summary": "Merge multiple PDFs",
        "operationId": "mergePdfs",
        "requestBody": {
          "description": "List of PDFs to merge, provided as Base64-encoded content.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "fileContent": {
                          "type": "string",
                          "format": "byte",
                          "description": "Base64-encoded PDF content."
                        }
                      },
                      "required": ["fileContent"]
                    }
                  }
                },
                "required": ["files"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully merged PDFs and returned as content.",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing or invalid inputs.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error during PDF merge.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/watermark": {
      "post": {
        "summary": "Add a watermark to a PDF",
        "operationId": "addWatermark",
        "requestBody": {
          "description": "Base64-encoded content of the PDF and watermark files.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "pdf_file_content": {
                    "type": "string",
                    "format": "byte",
                    "description": "Base64-encoded content of the PDF file."
                  },
                  "watermark_file_content": {
                    "type": "string",
                    "format": "byte",
                    "description": "Base64-encoded content of the watermark PDF file."
                  }
                },
                "required": ["pdf_file_content", "watermark_file_content"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully added watermark and returned as content.",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing or invalid inputs.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error during watermark application.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
