{
  "openapi": "3.0.0",
  "info": {
    "title": "PDF Processing API",
    "description": "API to merge and watermark PDFs.",
    "version": "1.0.0"
  },
  "paths": {
    "/merge": {
      "post": {
        "summary": "Merge multiple PDFs",
        "operationId": "mergePdfs",
        "requestBody": {
          "description": "List of Base64-encoded PDF files to merge.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "byte"
                    },
                    "description": "List of Base64-encoded PDF files."
                  }
                },
                "required": ["files"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Merged PDF returned as Base64-encoded content.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "file": {
                      "type": "string",
                      "format": "byte",
                      "description": "Base64-encoded merged PDF."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing or invalid files.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/watermark": {
      "post": {
        "summary": "Add a watermark to a PDF",
        "operationId": "addWatermark",
        "requestBody": {
          "description": "PDF and watermark file as Base64-encoded content.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "pdf_file": {
                    "type": "string",
                    "format": "byte",
                    "description": "Base64-encoded PDF file."
                  },
                  "watermark_file": {
                    "type": "string",
                    "format": "byte",
                    "description": "Base64-encoded watermark PDF."
                  }
                },
                "required": ["pdf_file", "watermark_file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Watermarked PDF returned as Base64-encoded content.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "file": {
                      "type": "string",
                      "format": "byte",
                      "description": "Base64-encoded watermarked PDF."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing or invalid files.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
