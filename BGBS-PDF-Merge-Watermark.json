{
    "openapi": "3.0.0",
    "info": {
        "title": "PDF Merger API",
        "description": "API to merge PDFs and apply watermarks.",
        "version": "1.0.0"
    },
    "paths": {
        "/merge": {
            "post": {
                "summary": "Merges multiple PDFs from SharePoint URLs into one PDF.",
                "operationId": "mergePdfs",
                "requestBody": {
                    "description": "List of SharePoint file URLs to merge.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file_urls": {
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "description": "List of SharePoint file URLs to merge."
                                    }
                                },
                                "required": [
                                    "file_urls"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully merged PDFs and returned as content.",
                        "content": {
                            "application/pdf": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                },
                                "example": "Merged PDF content"
                            }
                        }
                    },
                    "400": {
                        "description": "Missing file URLs.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error during PDF merge.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/watermark": {
            "post": {
                "summary": "Adds a watermark to a PDF.",
                "operationId": "addWatermark",
                "requestBody": {
                    "description": "PDF file and watermark file.",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "pdf_file": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "The PDF file to watermark."
                                    },
                                    "watermark_file": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "The watermark PDF file."
                                    }
                                },
                                "required": [
                                    "pdf_file",
                                    "watermark_file"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Watermark added successfully and returned as content.",
                        "content": {
                            "application/pdf": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                },
                                "example": "Watermarked PDF content"
                            }
                        }
                    },
                    "400": {
                        "description": "Missing PDF file or watermark file.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error during watermark application.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
